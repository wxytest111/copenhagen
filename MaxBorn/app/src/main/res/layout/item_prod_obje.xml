<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_weight="1"
    >
    <ImageView
        android:id="@+id/iv_prod_item_temp"
        android:layout_width="@dimen/activity_prod_image_width"
        android:layout_height="@dimen/activity_prod_image_height"
        />
    <TextView
        android:id="@+id/tv_prod_title_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_min_margin"
        android:textSize="18sp"
        android:textColor="#999"
        android:text="奥妙洗衣液1L(香兰型)"/>
    <TextView
        android:id="@+id/tv_prod_price_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_min_margin"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:text="¥22.00"/>
    <TextView
        android:id="@+id/tv_prod_describe_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_min_margin"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="促销描述语句"/>
</LinearLayout>