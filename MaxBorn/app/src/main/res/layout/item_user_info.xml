<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/top_layout_stroke"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/activity_user_head_width"
        android:layout_height="@dimen/activity_user_head_height"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_gravity="center"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/activity_user_head_radius">

        <ImageView
            android:id="@+id/iv_user_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
    </android.support.v7.widget.CardView>

    <!--<ImageView-->
        <!--android:id="@+id/userHeadImageView"-->
        <!--android:layout_width="120dp"-->
        <!--android:layout_height="120dp"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:adjustViewBounds="true"-->
        <!--android:background="@drawable/head_image"-->

        <!--/>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_min_margin"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="性别："
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/text_size_head_info" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄："
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/text_size_head_info" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_head_info" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_head_info" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_max_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="戴帽子："
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/text_size_head_info" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="戴眼镜："
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/text_size_head_info" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_hat"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_head_info" />

            <TextView
                android:id="@+id/tv_glasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_head_info" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_max_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:text="来店次数："
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/text_size_head_info" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常购商品类型："
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/text_size_head_info" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_frequency"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_head_info" />

            <TextView
                android:id="@+id/tv_prefer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_head_info" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>